# general
bind attach,compose,index,pager,browser Q exit

# index,pager
bind  index,pager H display-toggle-weed
bind  index,pager \cj sidebar-next
bind  index,pager \ck sidebar-prev
bind  index,pager \co sidebar-open
bind  index,pager \cd delete-thread
bind index,pager \cu undelete-thread
bind  index,pager \cn next-thread
bind  index,pager \cp previous-thread
bind  index,pager \cr read-thread
bind  index,pager e edit
bind  index,pager f forward-message
bind  index,pager x sync-mailbox
macro index,pager b '<enter-command>toggle sidebar_visible<enter>'

# pager
bind pager ' ' next-page
bind pager /   search
bind pager :   enter-command
bind pager <down> next-line
bind pager <down> next-line
bind pager <left> exit
bind pager <right> view-attachments
bind pager <up> previous-line
bind pager <up> previous-line
bind pager G bottom
bind pager g top
bind pager R list-reply
bind pager h exit
bind pager j next-line
bind pager k previous-line
bind pager l view-attachments

# index
bind index <left> change-folder
bind index <right> display-message
bind index G last-entry
bind index g first-entry
bind index S imap-fetch-mail
bind index h noop
bind index l display-message
bind index pagedown     next-page
bind index pageup   previous-page

# attach
bind attach <left> exit
bind attach <right> view-attach
bind attach H display-toggle-weed
bind attach h exit
bind attach l view-attach

# browser
bind browser <Enter> view-file
bind browser A check-new
bind browser G bottom-page
bind browser g top-page
bind browser \cb previous-page
bind browser \cf next-page

# compose
bind compose <right> view-attach
bind compose l view-attach

