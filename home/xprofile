# vim: ft=sh

# Settings
xset -b # mute the annoying beep

# Use native libs for steam
# https://wiki.archlinux.org/index.php/Steam#Using_native_runtime
export STEAM_RUNTIME=0

# Personal Keybinds
[ -r ~/.xmodmaprc ] && xmodmap ~/.xmodmaprc &
command -v xbindkeys && xbindkeys &

# Load Xresources just in case
[-r ~/.Xresources ] && xrdb -load ~/.Xresources &

# Load startup programs
[ -r ~/.xstartup  ] && source ~/.xstartup
