## vim: ft=sh
## Load Xresources manually because other methods proved to be not reliable
xrdb -remove -all # don't rely on display manager to clean up xresources
for file in "/etc/X11/Xresources" "$HOME/.Xresources" "$HOME/.xresources"; do
    if [ -f "$file" ]; then
        echo "Loading resource: $file"
        xrdb -merge "$file"
    fi
done

# Load ~/.xresources.d
for file in $HOME/.xresources.d/*; do
    if [ -f "$file" ]; then
        echo "Loading resource: $file"
        xrdb -merge "$file"
    fi
done

# Load Xresources colorshceme
xrdb -merge "$HOME/.xresources.d/colors/blackburn"
