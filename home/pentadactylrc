" Settings
set defsearch=sp
set hintkeys=asdfqwer

" Keybinds
map <A-h> <C-p>
map <A-l> <C-n>
map w <C-p>
map e <C-n>

map J <C-f>
map K <C-b>

" Navigate menus with hjkl
map -modes menu h <Left>
map -modes menu j <Down>
map -modes menu k <Up>
map -modes menu l <Right>

" Passthrough
map <i> <C-v>
map <S-Esc> <C-z>

" Cycle tabs using Alt-number
map <A-1> :buffer! 1<cr>
map <A-2> :buffer! 2<cr>
map <A-3> :buffer! 3<cr>
map <A-4> :buffer! 4<cr>
map <A-5> :buffer! 5<cr>
map <A-6> :buffer! 6<cr>
map <A-7> :buffer! 7<cr>
map <A-8> :buffer! 8<cr>
map <A-9> :buffer! 9<cr>
map <A-0> :buffer! 10<cr>

" Jump to quickmark using c (newtab)
map -b <c> gn

" TabGroup Handling
map gd :tgroup-delete 
map gi :tgroup-get 
map gm :tgroup-move 
map gn :tgroup-new 
map gs :tgroup-switch 
map gr :tgroup-title 

" Switch to last selected tab
map <A-`> <C-^>

" toggle apptab with x
map <x> :pintab!<cr>

" Toggle Nav Bar with F1
map <F1> :toolbartoggle Bookmarks Toolbar<cr>

" Show rss feeds in page with vr
map vr :open rss-feeds<cr>

" Open requestpolicy menu
map vp :js requestpolicy.overlay.openToolbarPopup()<cr>

" Pass left/right to epubreader
set passkeys+=about.epubreader.id=\d*:<left>,<right>

" Show tabnumbers
set guioptions+=ns
" Keep the statusbar on fullscreen
au Fullscreen .* :set guioptions+=s

" colorscheme
colorscheme solarized-light
" Compact tab numbers
hi -a TabNumber -append font-weight: bold; margin: 0px; padding-right: .0ex; cursor: default; text-align: center; font-size: 10px;
" Bigger hints
hi -a Hint font-size: 9pt !important;

" Load custom css
so ~/.pentadactyl/user.css
" vim: set ft=vim:
