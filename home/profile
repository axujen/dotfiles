## vim: ft=sh fdm=marker
## ~/.profile: Should ideally be the first thing to source at login
##             put env variables and other global settings,
##             make sure to make it compatible with all shells

# {{{ General
# paths
export PATH=$HOME/.local/bin:/usr/sbin:/sbin:$PATH
export MANPATH=$MANPATH:$HOME/.local/share/man

# pagers and editors
export PAGER="less"
export VISUAL="vim"
export EDITOR="vim"
# }}}

# {{{ profile.d
if [ -d "$HOME"/.profile.d ]; then # allow drop-in config for device specific settings
    for file in "$HOME"/.profile.d/*; do
        # the startup script must be executed
        if [ "$file" == "$HOME/.profile.d/startup" ]; then
            $file
            continue
        fi
        test -f "$file" && source "$file"
    done
fi

# Execute this script once per boot
# shellcheck source=/dev/null
if [ -r "$HOME"/.profile.d/startup ]; then "$HOME"/.profile.d/startup; fi
# }}}
