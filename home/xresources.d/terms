!! vim: ft=xdefaults fdm=marker
!! ~/.xresources.d/terms: handles x temrinal configuration
!! TODO: fix problem with urxvt not starting due to missing fonts
!! TODO: port urxvt-perls to be used in different distros (currently only arch works) or better yet, store them in dotfiles
! {{{ urxvt
urxvt*background:           black
urxvt*foreground:           white
urxvt*colorBD:				lightgreen
urxvt*colorIT:				lightblue
urxvt*cursorBlink:			true
urxvt*cursorUnderline:		false
urxvt*depth:				24
urxvt*font:					FONT
urxvt*highlightColor:		green
urxvt*highlightTextColor:	yellow
urxvt*jumpScroll:			True
urxvt*meta8:				False
urxvt*pointBlank:			false
urxvt*saveLines:			500
urxvt*scrollBar:			false
urxvt*scrollstyle:			plain
urxvt*skipScroll:			True
urxvt*termName:				rxvt-unicode
urxvt*underlineColor:		lightgreen
urxvt*urgentOnBell:			true
urxvt*visualBell:			true

! Extensions
urxvt*perl-ext-common:		default,matcher

! for compatibility use both entries
urxvt*urlLauncher:			firefox
urxvt*url-launcher:			firefox

urxvt*matcher.button:		1

! Bind Alt-c & Alt-v, Shift-Insert to copy and paste
URxvt.keysym.M-c:      eval:selection_to_clipboard
URxvt.keysym.M-v:      eval:paste_clipboard
URxvt.keysym.S-Insert: eval:paste_clipboard
! }}}

! {{{ xterm
xterm*font:			FONT
xterm*background:           black
xterm*foreground:           white
xterm*hpFunctionKeys:	True
xterm*dynamicColors:	true
xterm*utf8:				2
xterm*eightBitInput:	true
xterm*metaSendEscape:	true
xterm*saveLines:		512
xterm*scrollTtyKeypress:false
xterm*scrollTtyOutput:	false
xterm*scrollBar:		false
xterm*rightScrollBar:	false
xterm*jumpScroll:		true
xterm*multiScroll:		true
xterm*toolBar:			false
! }}}

! {{{ aterm
aterm*font:					FONT
aterm*background:           black
aterm*foreground:           white
aterm*boldFont:				-xos4-terminus-bold-r-normal--14-140-72-72-c-80-iso8859-1
